<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/layout_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="5">
        <ImageView
            android:id="@+id/img_category_item"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp" />
        <LinearLayout
            android:layout_weight="1.5"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:weightSum="2">
            <TextView
                android:gravity="center|left"
                android:text="asdadadadadadasdasdadsasdasd"
                android:singleLine="true"
                android:id="@+id/text_name_item"
                android:textColor="@color/colorBlack"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
            <TextView
                android:gravity="center|left"
                android:text="asdaaaaaaaaaaaasdasdasdasdasdasdasdasdasdasdadasdasdasdasdasdasdasd"
                android:singleLine="true"
                android:textColor="@color/DimGray"
                android:id="@+id/text_date_item"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
        </LinearLayout>
        <TextView
            android:singleLine="true"
            android:id="@+id/text_cost_item"
            android:textSize="@dimen/text_item_price"
            android:textColor="@color/SpringGreen1"
            android:gravity="center"
            android:layout_weight="2.5"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_mod"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:translationX="100dp"
        android:gravity="center"
        android:weightSum="2"
        >
        <LinearLayout
            android:background="@color/SpringGreen1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            >
        <com.example.khaphan.mywallet.object.MyImageView

            android:id="@+id/img_edit_item"
            android:src="@drawable/ic_edit"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_height="50dp" />
        </LinearLayout>
        <LinearLayout
            android:background="@color/colorAccent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <com.example.khaphan.mywallet.object.MyImageView

                android:id="@+id/img_delete_item"
                android:src="@drawable/ic_delete"
                android:layout_width="wrap_content"
                android:layout_height="50dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>